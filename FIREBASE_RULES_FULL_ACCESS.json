{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["email", "phone"]
    },
    "family_requests": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["fromUserId", "toUserId", "status"]
    },
    "family_members": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["memberId"]
    },
    "notifications": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["isRead", "createdAt"]
    },
    "reminders": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "password_reset_codes": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
